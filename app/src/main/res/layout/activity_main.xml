<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.luke.jocelyndressup.MainActivity"
    android:background="@color/colorAccent">

    <TextView
        android:text="@string/tax_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/priceText"
        android:gravity="center"
        android:id="@+id/textView7"
        android:layout_alignStart="@+id/priceText"
        android:layout_alignEnd="@+id/priceText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="serif"
        android:fontFamily="serif"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/textView7"
        android:id="@+id/taxText"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignEnd="@+id/textView7"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <TextView
        android:text="@string/total_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView9"
        android:layout_below="@+id/taxText"
        android:layout_alignStart="@+id/taxText"
        android:layout_alignEnd="@+id/taxText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal|bold"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/totalText"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignEnd="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout4"
        android:background="#003300"
        android:layout_marginBottom="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <Button
            android:text="Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeBtn"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white" />

        <Button
            android:text="Outfits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/OutfitsBtn"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:onClick="onClick" />

        <Button
            android:text="About"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/AboutBtn"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:textColor="@android:color/white"
            android:onClick="onClick" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentEnd="true"
        android:background="@android:color/white"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageHeadTemp"
            android:src="@drawable/a6"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            android:padding="1dp"
            android:layout_weight="0.03"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageTorsoTemp"
            android:src="@drawable/a12"
            android:background="#000000"
            android:padding="1dp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageLegsTemp"
            android:src="@drawable/a9"
            android:background="#000000"
            android:padding="1dp"
            android:layout_marginBottom="10dp"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageFeetTemp"
            android:background="#000000"
            android:padding="1dp"
            android:src="@drawable/a3"
            android:onClick="onClick" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout5"
        android:weightSum="1"
        android:background="@android:color/white"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/linearLayout2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageHeadShowTemp"
            android:src="@drawable/a6"
            android:layout_marginTop="20dp"
            android:layout_weight="0.03"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageTorsoShowTemp"
            android:src="@drawable/a12"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageLegsShowTemp"
            android:src="@drawable/a9"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageFeetShowTemp"
            android:src="@drawable/a3"
            android:layout_marginBottom="20dp"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:weightSum="1"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/linearLayout2">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageHeadShow"
            android:src="@drawable/a6"
            android:layout_marginTop="20dp"
            android:layout_weight="0.03"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageTorsoShow"
            android:src="@drawable/a12"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageLegsShow"
            android:src="@drawable/a9"
            android:onClick="onClick" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitEnd"
            android:adjustViewBounds="true"
            android:id="@+id/imageFeetShow"
            android:src="@drawable/a3"
            android:layout_marginBottom="20dp"
            android:onClick="onClick" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout1"
    android:weightSum="1"
    android:layout_below="@+id/linearLayout4"
    android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:id="@+id/imageHead"
        android:src="@drawable/a6"
        android:layout_marginBottom="10dp"
        android:background="#000000"
        android:padding="1dp"
        android:layout_weight="0.03"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:id="@+id/imageTorso"
        android:src="@drawable/a12"
        android:background="#000000"
        android:padding="1dp"
        android:layout_marginBottom="10dp"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:id="@+id/imageLegs"
        android:src="@drawable/a9"
        android:background="#000000"
        android:padding="1dp"
        android:layout_marginBottom="10dp"
        android:onClick="onClick" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitEnd"
        android:adjustViewBounds="true"
        android:id="@+id/imageFeet"
        android:background="#000000"
        android:padding="1dp"
        android:src="@drawable/a3"
        android:onClick="onClick" />
</LinearLayout>


    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:gravity="center"
        android:id="@+id/priceText"
        android:layout_alignEnd="@+id/textView4"
        android:typeface="serif"
        android:layout_alignStart="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:fontFamily="serif"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/white" />

    <TextView
        android:text="@string/outfit_name_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/outfitLabel"
        android:visibility="invisible"
        android:layout_below="@+id/totalText"
        android:layout_alignEnd="@+id/totalText"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textStyle="normal|bold"
        android:textSize="20sp"
        android:typeface="serif"
        android:fontFamily="sans-serif-medium"
        android:background="@color/colorPrimary"
        android:layout_alignStart="@+id/totalText"
        android:textColor="@android:color/white" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/buttonSave"
        android:onClick="onClick"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignStart="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout2" />

    <Button
        android:text="Remove Outfit"
        android:layout_width="300dp"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:id="@+id/removeOutfitBtn"
        android:layout_weight="0.00"
        android:visibility="invisible"
        android:onClick="onClick"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="-20dp"
        android:layout_below="@+id/buttonSave"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/price_prompt"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:textStyle="normal|bold"
        android:typeface="serif"
        android:background="@color/colorPrimary"
        android:paddingLeft="0dp"
        android:layout_below="@+id/linearLayout4"
        android:layout_centerHorizontal="true"
        android:textColorLink="@android:color/white"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/outfitNameText"
        android:gravity="center"
        android:visibility="invisible"
        android:text="blah blah"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:typeface="serif"
        android:textStyle="normal|bold"
        android:layout_below="@+id/outfitLabel"
        android:background="@color/colorPrimary"
        android:layout_alignStart="@+id/outfitLabel"
        android:layout_alignEnd="@+id/outfitLabel"
        android:textColor="@android:color/white" />

</RelativeLayout>
